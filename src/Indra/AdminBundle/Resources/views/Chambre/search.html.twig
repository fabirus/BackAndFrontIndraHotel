{% if searchText != '' %}
    <h2 style="color:black; border-bottom: 2px solid black; line-height: 2; font-family: Arial, Helvetica, sans-serif">Recherche de <b>'{{ searchText }}'</b></h2>
{% endif %}

{% for entity in entities %}
    <div style="height: 424px" class="infos_employe col-sm-6 col-md-3" aria-disabled="false">
        <div class="thumbnail" style="border-radius: 50%;text-align: center;box-shadow: 5px 5px;" >
            <div class="caption">
                <h3>{{ entity.categorie.nom }}</h3>
            </div>
            <div class="row" style="font-size: 20px; text-align: center">
                {% if entity.statut == 1 %}
                    <i title="Libre" style="color: forestgreen; cursor: pointer;" class="fa fa-check fa-5x"></i>
                {% else %}
                    <i title="Occupée" style="color: darkred; cursor: pointer;" class="fa fa-times fa-5x"></i>
                {% endif %}
            </div>
            <div class="caption">
                <h4><span class="label label-primary">Numéro</span> {{ entity.numero }}</h4>
                <h4><span class="label label-primary">Prix</span> {{ entity.categorie.prix }} <b>FCFA</b></h4>
            </div>
        </div>
    </div>
{% else %}
    <div class="row" style="text-align: center; font-size: 30px">
        <i class="fa fa-ban fa-5x"></i><br>
        <b>Oupss</b> Aucune Chambre trouvée !!!
    </div>
{% endfor %}



