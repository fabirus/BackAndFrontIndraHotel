{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} | Votes et Point de Vue {% endblock %}

{% block body -%}
<div class="alert alert-info" role="alert" style="font-size: 18px">Liste des Votes et Points de Vue de Nos Clients</div>
<div class="row">
    <div class="col-md-6">
    </div>
    <div class="col-md-6">
        <i title="Imprimer" class="fa fa-print fa-3x" onclick="common().print('noprint', 'Liste des Votes et Points de Vue de Nos Clients')" style="float: right; cursor: pointer; margin-right: 2%"></i>
    </div>
</div><br />

<table class="table table-hover table-bordered dataTable">
    <thead>
    <tr>
        <th style="text-align: center">Date</th>
        <th style="text-align: center">Nom</th>
        <th style="text-align: center">Vote</th>
        <th style="text-align: center">Commentaires</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td style="text-align: center">{{ entity.updatedAt|date("d/m/Y h:m:s") }}</td>
            <td style="text-align: center">{{ entity.nom }}</td>
            <td style="text-align: center">{{ entity.vote }} / 5</td>
            <td style="text-align: center">{{ entity.commentaire }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
 {% endblock %}

    {% block javascripts %}
        {{ parent() }}
        <script type="text/javascript"  src="{{ asset('js/lib/common.js')}}"></script>
        <script>
            common().dataTable(0);
        </script>

    {% endblock %}
