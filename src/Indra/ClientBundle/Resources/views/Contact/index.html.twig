{% extends 'baseClient.html.twig' %}
{% block title %}INDRA Hotel | Contacts {% endblock %}

{% block body %}
    <div class="contact-bg">
	    <div class="container">
            {% for flashMessage in app.session.flashbag.get('success_contact_send') %}
                <div class="alert alert-success" role="alert" style="font-size: 18px;margin-top: 2%;">
                    {{ flashMessage }}
                </div>
            {% endfor %}
	      <div class="contact-us">
				<div class="contact-us_left">
					<div class="contact-us_info">
			    	 	<h3 class="style">Nous Retrouver Ici</h3>
			    	 		<div class="map">
                                <iframe width="100%" height="175" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3980.615587156177!2d11.509313315383523!3d3.8922703492186406!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x108bcf43658116df%3A0x887a57c1ff622b2f!2sCarrefour+Bastos!5e0!3m2!1sfr!2sfr!4v1452079339861" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
					   		</div>
      				</div>
      			 <div class="company_address">
				     	<h3 class="style">Hotel Information :</h3>
						<p>YAOUNDE, BP: 11231 Carrefour BASTOS,</p>
						<p>CAMEROUN</p>
				   		<p>TÃ©lephone:(+237) 222 20 53 75</p>
				   		{#<p>Fax: (000) 000 00 00 0</p>#}
				 	 	<p>Email: <a href="mailto:indrahotel@gmail.com">indrahotel@gmail.com</a></p>
				   		<p>Retrouver Nous: <a href="https://www.facebook.com/myindrahotel">Facebook</a>, <a href="https://www.facebook.com/myindrahotel">Twitter</a></p>
				   </div>
				</div>
				<div class="contact_right">
				  <div class="contact-form">
				  	<h3 class="style">Nous Contacter</h3>
                    {{ form_start(form) }}
                    {{ form_errors(form) }}

                    {{ form_row(form.nom) }}
                    {{ form_row(form.email) }}
                    {{ form_label(form.tel) }}
                    <div class="form-group">
                        <div class='input-group'>
                            <span class="input-group-addon">+237</span>
                            {{ form_widget(form.tel) }}
                            <span class="input-group-addon">
                                <i class="fa fa-phone"></i>
                            </span>
                        </div>
                    </div>
                      {{ form_row(form.tel) }}

                      {{ form_row(form.sujet) }}
                    <div id="remove">
                        {{ form_row(form.reponse) }}
                    </div>
                    <input type="reset" value="Reset">
                    {{ form_widget(form.submit, { 'label': 'Envoyer', 'attr' :{'type' : 'submit', 'class' : 'submit'}})}}

                {{ form_end(form) }}
                </div>
  				</div>
  				<div class="clear"></div>
		  </div>
	 </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/vendor/jquery-validation/dist/jquery.validate.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/jquery-validation/dist/additional-methods.min.js') }}"></script>
    <script type="text/javascript"  src="{{ asset('js/lib/common.js')}}"></script>
    <script>
        $("form").validate();
        common().validation();
        $(".phoneNumber").rules("add", { phone: "" });
        $('#remove').remove();
    </script>

{% endblock %}